{
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "es6",
            "es2020"
        ],
        "target": "es2020",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@/components/*": [
                "./src/components/*"
            ],
            "@/lib/*": [
                "./src/lib/*"
            ],
            "@/types/*": [
                "./src/types/*"
            ],
            "@/hooks/*": [
                "./src/hooks/*"
            ],
            "@/database/*": [
                "./src/lib/database/*"
            ],
            "@/validation/*": [
                "./src/lib/validation/*"
            ]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}